{
  "manifest_version": 3,
  "name": "Screenshot Saver",
  "version": "0.1.0",
  "description": "Capture screenshots and save as PNG/JPG/PDF or copy to clipboard.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Screenshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "downloads",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
